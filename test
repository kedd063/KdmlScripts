local player = game.Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KdmlGui"
screenGui.Parent = player:WaitForChild("PlayerGui")

-- Ana buton (ikon)
local mainButton = Instance.new("ImageButton")
mainButton.Size = UDim2.new(0, 100, 0, 100)
mainButton.Position = UDim2.new(0.5, -50, 0.5, -50)
mainButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
mainButton.AnchorPoint = Vector2.new(0.5, 0.5)
mainButton.Image = "rbxassetid://104833147631294"
mainButton.Name = "MainButton"
mainButton.Parent = screenGui

local mainCorner = Instance.new("UICorner", mainButton)
mainCorner.CornerRadius = UDim.new(0, 20)

-- Ana panel
local panel = Instance.new("Frame")
panel.Size = UDim2.new(0, 300, 0, 400)
panel.Position = UDim2.new(0.5, -150, 0.5, -200)
panel.BackgroundColor3 = Color3.fromRGB(50, 0, 80)
panel.AnchorPoint = Vector2.new(0.5, 0.5)
panel.Visible = false
panel.Parent = screenGui

local panelCorner = Instance.new("UICorner", panel)
panelCorner.CornerRadius = UDim.new(0, 12)

-- Başlık barı
local titleBar = Instance.new("TextLabel")
titleBar.Parent = panel
titleBar.Size = UDim2.new(1, 0, 0, 30)
titleBar.Position = UDim2.new(0, 0, 0, 0)
titleBar.BackgroundColor3 = Color3.fromRGB(80, 0, 120)
titleBar.Text = "Kdml Scripts"
titleBar.TextColor3 = Color3.new(1, 1, 1)
titleBar.Font = Enum.Font.GothamBold
titleBar.TextSize = 20

-- Başlık bar draggable
local dragging, dragInput, dragStart, startPos = false

titleBar.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = panel.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

titleBar.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        local delta = input.Position - dragStart
        panel.Position = UDim2.new(
            startPos.X.Scale,
            startPos.X.Offset + delta.X,
            startPos.Y.Scale,
            startPos.Y.Offset + delta.Y
        )
    end
end)

-- Satın alma fonksiyonu
local function buyItem(itemName)
    local rf = ReplicatedStorage:WaitForChild("Packages"):WaitForChild("Net"):WaitForChild("RF/CoinsShopService/RequestBuy")
    rf:InvokeServer(itemName)
end

-- Buton oluşturucu
local function createBuyButton(name, posY)
    local btn = Instance.new("TextButton")
    btn.Parent = panel
    btn.Size = UDim2.new(0.8, 0, 0, 40)
    btn.Position = UDim2.new(0.1, 0, 0, posY)
    btn.BackgroundColor3 = Color3.fromRGB(120, 0, 180)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 18
    btn.Text = "Buy " .. name

    btn.MouseButton1Click:Connect(function()
        buyItem(name)
    end)

    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 8)
end

-- Tüm item butonları
local items = {"Trap", "Invisibility Cloak", "Medusa's Head", "Quantum Cloner", "Body Swap Potion"}

for i, item in ipairs(items) do
    createBuyButton(item, 30 + (i * 50))
end

-- "Instant Steal Coming Soon.." butonu
local comingSoon = Instance.new("TextButton")
comingSoon.Parent = panel
comingSoon.Size = UDim2.new(0.8, 0, 0, 40)
comingSoon.Position = UDim2.new(0.1, 0, 0, 30 + (#items + 1) * 50)
comingSoon.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
comingSoon.TextColor3 = Color3.new(1, 1, 1)
comingSoon.Font = Enum.Font.GothamBold
comingSoon.TextSize = 18
comingSoon.Text = "Instant Steal Coming Soon.."

local csCorner = Instance.new("UICorner", comingSoon)
csCorner.CornerRadius = UDim.new(0, 8)

comingSoon.MouseButton1Click:Connect(function()
    -- şimdilik bişi yapmıyor
end)

-- Menü aç/kapa
mainButton.MouseButton1Click:Connect(function()
    panel.Visible = not panel.Visible
end)
