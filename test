local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local PlayerGui = player:WaitForChild("PlayerGui")

-- Ekranda görünmesi için ScreenGui oluştur
local gui = Instance.new("ScreenGui")
gui.Name = "TpInsideGui"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = false
gui.Parent = PlayerGui

-- Buton oluştur
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 160, 0, 50)
button.Position = UDim2.new(0, 20, 0.85, 0)
button.BackgroundColor3 = Color3.fromRGB(140, 90, 255)
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.GothamBold
button.TextSize = 20
button.Text = "TP Inside"
button.Name = "TpInsideButton"
button.Parent = gui

-- Kenarları yumuşat
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = button

-- Duvar geçişli TP fonksiyonu
local function wallTP()
	local character = player.Character or player.CharacterAdded:Wait()
	local hrp = character:FindFirstChild("HumanoidRootPart")
	if not hrp then return end

	-- Çarpışmayı kapat (NoClip)
	for _, part in ipairs(character:GetDescendants()) do
		if part:IsA("BasePart") then
			part.CanCollide = false
		end
	end

	-- Yeni pozisyon
	local look = workspace.CurrentCamera.CFrame.LookVector
	local targetPos = hrp.Position + (look * 5)
	targetPos = Vector3.new(targetPos.X, hrp.Position.Y, targetPos.Z)

	-- Tween ile ileri git
	local tween = TweenService:Create(hrp, TweenInfo.new(0.3), {CFrame = CFrame.new(targetPos)})
	tween:Play()

	-- Bitince çarpışmayı aç
	tween.Completed:Connect(function()
		for _, part in ipairs(character:GetDescendants()) do
			if part:IsA("BasePart") then
				part.CanCollide = true
			end
		end
	end)
end

-- Butona tıklanırsa
button.MouseButton1C
