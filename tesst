local Players = game:GetService("Players")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "KdmlHub"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

-- Ana Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 300, 0, 230)
mainFrame.Position = UDim2.new(0.5, -150, 0.5, -115)
mainFrame.BackgroundColor3 = Color3.fromRGB(170, 120, 255)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 12)

-- Gradyan Arka Plan
local gradient = Instance.new("UIGradient", mainFrame)
gradient.Color = ColorSequence.new{
	ColorSequenceKeypoint.new(0, Color3.fromRGB(170, 120, 255)),
	ColorSequenceKeypoint.new(1, Color3.fromRGB(255, 255, 255))
}
gradient.Rotation = 45

-- Başlık
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "Kdml Hub"
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.TextColor3 = Color3.new(1, 1, 1)
title.Parent = mainFrame

-- Buton Oluşturma Fonksiyonu
local function createButton(text, yOffset, scriptUrl)
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(0.9, 0, 0, 32)
	button.Position = UDim2.new(0.05, 0, 0, yOffset)
	button.BackgroundColor3 = Color3.fromRGB(110, 80, 200)
	button.Text = text
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.GothamSemibold
	button.TextScaled = true
	button.Parent = mainFrame
	Instance.new("UICorner", button).CornerRadius = UDim.new(0, 6)

	button.MouseButton1Click:Connect(function()
		pcall(function()
			loadstring(game:HttpGet(scriptUrl))()
		end)
	end)
end

-- 4 Buton ve Script URL'leri
createButton("1. Steal a Brainrot Script 1", 40, "https://pastefy.app/cjXdhdB7/raw")
createButton("2. Steal a Brainrot Script 2", 80, "https://raw.githubusercontent.com/bananaGanteng/Legend/refs/heads/main/Steal%20a%20Brainrot")
createButton("3. Kdml Scripts Steal a Brainrot Script", 120, "https://raw.githubusercontent.com/kedd063/KdmlScripts/refs/heads/main/mine-sab")
createButton("4. 99 Nights İn The Forest", 160, "https://raw.githubusercontent.com/AhmadV99/Speed-Hub-X/main/Speed%20Hub%20X.lua")
